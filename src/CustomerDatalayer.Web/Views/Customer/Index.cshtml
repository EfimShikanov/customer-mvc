@model IEnumerable<CustomerDatalayer.Entities.Customer>
@{
    ViewBag.Title = "Customers list";
}

<h3>Customers list</h3>
<div class="customers-list">
    <div class="customers-list__header">
        <div class="customers-list__cell text-uppercase">
            Firstname
        </div>
        <div class="customers-list__cell text-uppercase">
            Lastname
        </div>
        <div class="customers-list__cell text-uppercase">
            Phone
        </div>
        <div class="customers-list__cell text-uppercase">
            Email
        </div>
        <div class="customers-list__cell text-uppercase">
            Total purchases amount
        </div>
    </div>
    @foreach (var customer in Model)
    {
        <div class="customers-list__row">
            <div class="customers-list__cell">
                @Html.DisplayFor(modelItem => customer.FirstName)
            </div>
            <div class="customers-list__cell">
                @Html.DisplayFor(modelItem => customer.LastName)
            </div>
            <div class="customers-list__cell">
                @Html.DisplayFor(modelItem => customer.PhoneNumber)
            </div>
            <div class="customers-list__cell">
                @Html.DisplayFor(modelItem => customer.Email)
            </div>
            <div class="customers-list__cell text-center">
                @Html.DisplayFor(modelItem => customer.TotalPurchasesAmount)
            </div>
            <a href="@Url.Action("Details", new { customerId = customer.CustomerId })">
                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#646464">
                    <path d="M0 0h24v24H0V0z" fill="none"/>
                    <path d="M19 3h-4.18C14.4 1.84 13.3 1 12 1s-2.4.84-2.82 2H5c-1.1 0-2 .9-2 2v14c0 1.1.9 2 2 2h14c1.1 0 2-.9 2-2V5c0-1.1-.9-2-2-2zm-7 0c.55 0 1 .45 1 1s-.45 1-1 1-1-.45-1-1 .45-1 1-1zm1 14H8c-.55 0-1-.45-1-1s.45-1 1-1h5c.55 0 1 .45 1 1s-.45 1-1 1zm3-4H8c-.55 0-1-.45-1-1s.45-1 1-1h8c.55 0 1 .45 1 1s-.45 1-1 1zm0-4H8c-.55 0-1-.45-1-1s.45-1 1-1h8c.55 0 1 .45 1 1s-.45 1-1 1z"/>
                </svg>
            </a>
            <a href="@Url.Action("Delete", new { customerId = customer.CustomerId })">
                <svg xmlns="http://www.w3.org/2000/svg" height="24px" viewBox="0 0 24 24" width="24px" fill="#e04f4f">
                    <path d="M0 0h24v24H0V0z" fill="none"/>
                    <path d="M18.3 5.71c-.39-.39-1.02-.39-1.41 0L12 10.59 7.11 5.7c-.39-.39-1.02-.39-1.41 0-.39.39-.39 1.02 0 1.41L10.59 12 5.7 16.89c-.39.39-.39 1.02 0 1.41.39.39 1.02.39 1.41 0L12 13.41l4.89 4.89c.39.39 1.02.39 1.41 0 .39-.39.39-1.02 0-1.41L13.41 12l4.89-4.89c.38-.38.38-1.02 0-1.4z"/>
                </svg>
            </a>
        </div>
    }
</div>